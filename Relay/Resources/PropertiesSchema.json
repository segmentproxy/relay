{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://segmentproxy.com/Resources/PropertiesSchema.json",
  "title": "EventProperties",
  "type": "object",
  "properties": {
    "org_phone":      {"$ref": "#/definitions/Phone", "description": ""},
    "dst_phone":      {"$ref": "#/definitions/Phone", "description": ""},
    "rsp_phone":      {"$ref": "#/definitions/Phone", "description": ""},
    "email":          {"$ref": "#/definitions/Email", "description": ""},
    "customer":       {"$ref": "#/definitions/Customer", "description": ""},
    "notification":   {"$ref": "#/definitions/Notification", "description": ""},
    "regarding":      {"$ref": "#/definitions/CrmID", "description": ""},
    "crm_entity_id":  {"$ref": "#/definitions/CrmID", "description": ""}
  },
  "required": [],
  "additionalProperties": false,
  "definitions": {
    "Phone": {
      "type": "object",
      "description": "",
      "properties": {
        "nr":       { "type": "string", "pattern": "^[+]*[(]{0,1}[0-9]{1,4}[)]{0,1}[-\\s./0-9]*$", "minLength": 7},
        "carrier":  { "$ref": "#/definitions/Carrier", "description":"" },
        "location": { "$ref": "#/definitions/Location", "description":"" },
        "type":     { "type": "string" }
      },
      "required": ["nr"],
      "uniqueItems": true
    },
    "Email": {
      "type": "object",
      "description": "",
      "properties": {
        "address":  { "type": "string", "format": "email", "minLength": 5 }
      },
      "required": ["address"],
      "uniqueItems": true
    },
    "Customer": {
      "type": "object",
      "description": "",
      "$comment": "Should this be traits from core properties",
      "properties": {
        "id": { "type": "string" }
      },
      "required": ["customer_id"],
      "uniqueItems": true
    },
    "Notification": {
      "type": "object",
      "description": "",
      "properties": {
        "method": {
          "type": "string",
          "pattern": "^(sms|email)$",
          "description": "Method used to send the notification"
        },
        "type":       { "type": "string", "minLength": 10 },
        "subject":    { "type": "string", "minLength": 1 },
        "payload":    { "type": "string", "contentEncoding": "base64", "contentMediaType": "text/html" }
      },
      "required": ["method", "type"],
      "uniqueItems": true
    },
    "Service": {
      "type": "object",
      "description": "",
      "properties": {
        "id":         { "type": "string" },
        "name":       { "type": "string", "minLength": 1 },
        "type":       { "type": "string" },
        "variant":    { "type": "string" },
        "sku":        { "type": "string" },
        "category":   { "type": "string", "description": "Product category being viewed" },
        "tags":       { "type": "array", "items": {"type":  "string"}, "minItems": 1}
      },
      "required": ["name"],
      "uniqueItems": true
    },
    "Product": {
      "type": "object",
      "description": "",
      "properties": {
        "id":         { "type": "string", "description": "Product id displayed on the list", "minLength": 1 },
        "sku":        { "type": "string", "description": "Sku of the product being viewed" },
        "category":   { "type": "string", "description": "Product category being viewed" },
        "name":       { "type": "string", "description": "Name of the product being viewed" },
        "brand":      { "type": "string", "description": "Brand associated with the product" },
        "variant":    { "type": "string", "description": "Variant of the product (e.g. Black)" },
        "price":      { "type": "number", "description": "Price ($) of the product being viewed" },
        "quantity":   { "type": "number", "description": "Quantity of a product" },
        "coupon":     { "type": "string", "description": "Coupon code associated with a product (e.g MAY_DEALS_3)" },
        "position":   { "type": "number", "description": "Position in the product list (ex. 3)" },
        "url":        { "type": "string", "description": "URL of the product page" },
        "image_url":  { "type": "string", "description": "Image url of the product" },
        "tags":       { "type": "array", "items": {"type":  "string"}}
      },
      "required": ["id","sku","name"],
      "uniqueItems": true
    },
    "Carrier": {
      "type": "object",
      "description": "",
      "properties": {
        "id":       { "type": "string", "minLength": 1 },
        "name":     { "type": "string" },
        "handle":   { "type": "string" },
        "location": { "$ref": "#/definitions/Location", "description":"" }
      },
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    },
    "Equipment": {
      "type": "object",
      "description": "",
      "properties": {
      },
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    },
    "TargetGroup": {
      "type": "object",
      "description": "",
      "properties": {},
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    },
    "Employee": {
      "type": "object",
      "description": "",
      "properties": {},
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    },
    "Location": {
      "type": "object",
      "description": "",
      "properties": {
        "country_code": { "$ref": "./SegmentSchema.json#/definitions/vtCountryCode", "minLength": 2, "maxLength": 3 },
        "postal_code":  { "type": "string", "minLength": 3 },
        "hasc":         { "$ref": "./SegmentSchema.json#/definitions/vtHASC", "minLength": 2, "mazLength": 8 },
        "geo":          { "$ref": "./SegmentSchema.json#/definitions/vtGeo" }
      },
      "required": ["hasc","country_code"],
      "minProperties": 2,
      "uniqueItems": true
    },
    "Issue": {
      "type": "object",
      "description": "",
      "properties": {},
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    },
    "Document": {
      "type": "object",
      "description": "",
      "properties": {},
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    },
    "Payment": {
      "type": "object",
      "description": "",
      "properties": {},
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    },
    "Content": {
      "type": "object",
      "description": "",
      "properties": {},
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    },
    "ContentProvider": {
      "type": "object",
      "description": "",
      "properties": {},
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    },
    "Order": {
      "type": "object",
      "description": "",
      "properties": {},
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    },
    "RatePlan": {
      "type": "object",
      "description": "",
      "properties": {},
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    },
    "Address": {
      "type": "object",
      "description": "",
      "properties": {
        
      },
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    },
    "Invoice": {
      "type": "object",
      "description": "",
      "properties": {},
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    },
    "CrmID": {"type": "string", "minLength": 20}
  }
}