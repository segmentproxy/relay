{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://segmentproxy.com/Resources/PropertiesSchema.json",
  "title": "EventProperties",
  "type": "object",
  "properties": {
    "org_phone":          {"$ref": "#/definitions/Phone", "description": "The phone number used to start the action (caller or origin of an sms)."},
    "dst_phone":          {"$ref": "#/definitions/Phone", "description": "The target phone number for the action (being called or items being sent to."},
    "rsp_phone":          {"$ref": "#/definitions/Phone", "description": "The phone number responsible for the action being taken (the parent phone number)."},
    "org_email_address":  {"$ref": "./SegmentSchema.json#/definitions/vtEmail", "description": "The email address responsible for starting the action (sent from)."},
    "dst_email_address":  {"$ref": "./SegmentSchema.json#/definitions/vtEmail", "description": "The target email address."},
    "customer":           {"$ref": "#/definitions/Customer", "description": "The customer primarily involved in the action."},
    "notification":       {"$ref": "#/definitions/Correspondence", "description": "A notification being sent or being received."},
    "regarding":          {"$ref": "#/definitions/CrmEntity", "description": "The CRM entity that the action is regarding."},
    "service":            {"$ref": "#/definitions/Service", "description": "The Nova service that the action is regarding."},
    "done_by":            {"$ref": "#/definitions/Employee", "description": "The Nova employee initiating the action."},
    "authored_by":        {"$ref": "#/definitions/Employee", "description": "The Nova employee authoring the action ."},
    "device":             {"$ref": "#/definitions/Equipment", "description": "The device/equipment that this action responds to."}
    "payment":            {"$ref": "#/definitions/Payment", "description": "The payment involved in the action."}
    "order":              {"$ref": "#/definitions/Payment", "description": "The payment involved in the action."}
  },
  "required": [],
  "additionalProperties": true,
  "uniqueItems": true,
  "definitions": {
    "Phone": {
      "type": "object",
      "description": "",
      "properties": {
        "nr":         { "$ref": "./SegmentSchema.json#/definitions/vtPhoneNumber", "description": "The phone number" },
        "type":       { "type": "string", "description": "The type of phone number (landline or mobile)", "pattern": "^(mobile|landline)$" },
        "carrier":    { "$ref": "#/definitions/Carrier", "description":"Information about the carrier responsible for the phone number and the home-region for the phone." },
        "location":   { "$ref": "#/definitions/Location", "description":"The current location of the phone number (country or more details)" }
      },
      "required": ["nr"],
      "uniqueItems": true
    },
    "Customer": {
      "type": "object",
      "description": "",
      "$comment": "Should this be traits from core properties",
      "properties": {
        "id":         { "type": "string", "description": "The ID of the customer used natively in the origin system" },
        "crm_id":     { "$ref": "#/definitions/CrmID", "description":"The CRM ID of the customer" },
        "ssn":        { "$ref": "#/definitions/SocialSecurityNr", "description":"The social security number of the customer" },
        "details":    { "$ref": "./SegmentSchema.json#/definitions/Traits", "description": "The traits/details of the customer using the segment.com schema for customer traits" },
        "address":    { "$ref": "#/definitions/Address", "description":"The address of the customer ", "$comment": "Redundant with the Trait address  if we decide to use that solely." },
        "parent_customer": { "$ref": "#/definitions/Customer", "description":"The parent customer of this customer. (if this is a division or child)" }
      },
      "required": ["id"],
      "uniqueItems": true
    },
    "Correspondence": {
      "type": "object",
      "description": "",
      "properties": {
        "method":     { "type": "string", "pattern": "^(sms|email|phone|letter)$", "description": "Method used to send the correspondence." },
        "type":       { "type": "string", "minLength": 10, "description": "Correspondence type if this is a standard correspondence ('other' if it is not)." },
        "subject":    { "type": "string", "minLength": 1, "description": "The subject line/title for the correspondence." },
        "payload":    { "type": "string", "contentEncoding": "base64", "contentMediaType": "text/html", "description": "The correspondence it self (the content)." }
      },
      "required": ["method", "type"],
      "uniqueItems": true
    },
    "Service": {
      "type": "object",
      "description": "",
      "properties": {
        "id":         { "type": "string", "description": "The ID of the telcom service used by the origin system." },
        "sku":        { "type": "string", "description": "The publicly visible ID for the telcom service (Customer facing)." },
        "name":       { "type": "string", "minLength": 1, "description": "The name of the telcom service" },
        "type":       { "type": "string", "description": "The core type of the telcom service ", "pattern": "^(phone|internet|tv)$" },
        "variant":    { "type": "string", "description": "The variant of the service (Rate plane or main distinction)"},
        "category":   { "type": "string", "description": "Product/Service category that the service belongs to" },
        "tags":       { "type": "array", "items": {"type":  "string", "minLength": 3 }, "minItems": 1, "description": "Various tags used to classify the service"}
      },
      "required": ["name","type","id"],
      "uniqueItems": true
    },
    "Product": {
      "type": "object",
      "description": "",
      "properties": {
        "id":         { "type": "string", "description": "Product id displayed on the list", "minLength": 1 },
        "sku":        { "type": "string", "description": "Sku of the product being viewed" },
        "category":   { "type": "string", "description": "Product category being viewed" },
        "name":       { "type": "string", "description": "Name of the product being viewed" },
        "brand":      { "type": "string", "description": "Brand associated with the product" },
        "variant":    { "type": "string", "description": "Variant of the product (e.g. Black)" },
        "price":      { "type": "number", "description": "Price ($) of the product being viewed" },
        "quantity":   { "type": "number", "description": "Quantity of a product" },
        "coupon":     { "type": "string", "description": "Coupon code associated with a product (e.g MAY_DEALS_3)" },
        "position":   { "type": "number", "description": "Position in the product list (ex. 3)" },
        "tags":       { "type": "array", "items": {"type":  "string"}},
        "url":        { "$ref": "./SegmentSchema.json#/definitions/vtUrl", "description": "URL of the product page" },
        "image_url":  { "$ref": "./SegmentSchema.json#/definitions/vtUrl", "description": "Image url of the product" }
      },
      "required": ["id","sku","name"],
      "uniqueItems": true
    },
    "Carrier": {
      "type": "object",
      "description": "",
      "properties": {
        "id":             { "type": "string", "minLength": 1, "description": "The ID of the carrier as used by the origin system" },
        "name":           { "type": "string", "description": "The name of the carrier as used by the origin system" },
        "handle":         { "type": "string", "description": "the slug, handle or alternative ID for the carrier as used publicly" },
        "details":        { "$ref": "./SegmentSchema.json#/definitions/Traits", "description": "The traits/details of the carrier using the segment.com schema for customer traits" },
        "location":       { "$ref": "#/definitions/Location", "description":"The primary location of the carrier ot this subsidiary of the carrier" },
        "parent_carrier": { "$ref": "#/definitions/Carrier", "description":"The parent carrier of this carrier. (if this is a division or child)" }
      },
      "required": ["id","handle","name"],
      "minProperties": 2,
      "uniqueItems": true
    },
    "Equipment": {
      "type": "object",
      "description": "Used to attach activity feed entries to equipment and to provide details regarding the equipment.",
      "properties": {
        "mac":        { "$ref": "./SegmentSchema.json#/definitions/vtMacAddress", "description": "The mac address of the equipment." },
        "type":       { "type": "string", "description": "The primary type of equipment", "pattern": "~(router|switch|mobile|phone|computer)$" },
        "brand":      { "type": "string", "description": "The brand of the equipment manufacturer." },
        "make":       { "type": "string", "description": "The make is the primary product name." },
        "model":      { "type": "string", "description": "The model is the secondary product name (variant)." },
        "location":       { "$ref": "#/definitions/Location", "description":"The primary location of the equipment if stationary." }
      },
      "required": ["type"],
      "uniqueItems": true
    },
    "TargetGroup": {
      "type": "object",
      "description": "",
      "properties": {
        "name":       { "type": "string" }
      },
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    },
    "Employee": {
      "type": "object",
      "description": "",
      "properties": {
        "id":         { "type": "string" },
        "details":    { "$ref": "./SegmentSchema.json#/definitions/Traits", "description": "The traits/details of the employee using the segment.com schema for customer traits" }
      },
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    },
    "Location": {
      "type": "object",
      "description": "",
      "properties": {
        "country_code": { "$ref": "./SegmentSchema.json#/definitions/vtCountryCode", "minLength": 2, "maxLength": 3 },
        "postal_code":  { "type": "string", "minLength": 3 },
        "hasc":         { "$ref": "./SegmentSchema.json#/definitions/vtHASC" },
        "geo":          { "type": "array", "items":  {"type": "number", "minLength": 2, "maxLength": 3}}
      },
      "required": ["hasc","country_code"],
      "minProperties": 2,
      "uniqueItems": true
    },
    "Issue": {
      "type": "object",
      "description": "",
      "properties": {
        "id":         { "type": "string" },
        "name":       { "type": "string" },
        "type":       { "type": "string" },
        "category":   { "type": "string" },
        "tags":       { "type": "array", "items": {"type":  "string", "minLength": 3 }, "minItems": 1}
      },
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    },
    "Document": {
      "type": "object",
      "description": "",
      "properties": {
        "id":         { "type": "string" },
        "name":       { "type": "string" },
        "payload":    { "type": "string", "contentEncoding": "base64", "contentMediaType": "text/html" },
        "media_type": { "type": "string" },
        "category":   { "type": "string" },
        "tags":       { "type": "array", "items": {"type":  "string", "minLength": 3 }, "minItems": 1 }
      },
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    },
    "Payment": {
      "type": "object",
      "description": "",
      "properties": {},
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    },
    "Content": {
      "type": "object",
      "description": "",
      "properties": {},
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    },
    "ContentProvider": {
      "type": "object",
      "description": "",
      "properties": {},
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    },
    "Order": {
      "type": "object",
      "description": "",
      "properties": {
        "id":         { "type": "string" },
        "placed":     { "type": "string" }
      },
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    },
    "RatePlan": {
      "type": "object",
      "description": "",
      "properties": {
        "id":         { "type": "string" },
        "name":       { "type": "string" }
      },
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    },
    "Address": {
      "type": "object",
      "description": "",
      "properties": {
        "street":     { "type" : "string", "description": "" },
        "city":       { "type" : "string", "description": "" },
        "country":    { "type" : "string", "description": "" },
        "postal_code":{ "type" : "string", "description": "" },
        "state":      { "type" : "string", "description": "" },
        "location":   { "$ref": "#/definitions/Location", "description":"" }
      },
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    },
    "Invoice": {
      "type": "object",
      "description": "",
      "properties": {
        "id":         { "type": "string" },
        "created":    { "type": "string" }
      },
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    },
    "SocialSecurityNr": {"type": "string", "minLength": 10, "maxLength": 10, "pattern": "^([0-9]{6})(-?)([0-9]{3})[890]$"},
    "CrmID": {
      "type": "string",
      "minLength": 32, 
      "pattern": "^[0-9A-Fa-f]{8}(?:-[0-9A-Fa-f]{4}){3}-[0-9A-Fa-f]{12}$",
      "$comment": "guid"
    },
    "CrmEntity": {
      "type": "object",
      "description": "",
      "properties": {
        "id":         { "$ref": "#/definitions/CrmID", "description":"" },
        "type":       { "type": "string", "$comment": "Regarding: Service, Contact"}
      },
      "required": [],
      "minProperties": 2,
      "uniqueItems": true
    }
  }
}